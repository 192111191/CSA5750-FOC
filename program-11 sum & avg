#include<stdio.h>
int main()
{
	int n,i,sum=0,num;
	float avg;
	printf("enter the range of numbers(end limit):\n");
	scanf("%d",&n);
	printf("\n enter the elements one by one:\n");
	for(i=0;i<n;i++)
	{
		scanf("%d",&num);
		sum +=num;
	}
	avg=sum/n;
	printf("\n sum of %d number:%d",n,sum);
	printf("\n avg of %d number:%f",n,avg);
}
